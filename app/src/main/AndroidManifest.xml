<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tems.baldaonline">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".App"
        android:allowBackup=""
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaldaOnline">
        <activity android:name=".views.ActivityCreateOnlineGame" />
        <activity android:name=".views.ActivitySettingsBotGame" />
        <activity
            android:name=".views.ActivityOnlineGames"
            android:label="@string/title_activity_online_games"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityEditor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivitySettingsGameOneOnOne"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityLoad"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.ActivityMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ActivityGameOneOnOne"
            android:screenOrientation="portrait" />
    </application>

</manifest>