<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaldaOnline" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/elements_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/gost_type</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text</item>
    </style>

    <style name="button_menu">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_elements</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/style_bt_blue</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_elements</item>
    </style>

    <style name="button_settings">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_elements</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/style_bt_green</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_elements</item>
    </style>

    <style name="background_gradient_green">
        <item name="android:background">@drawable/background_gradient_green</item>
    </style>

    <style name="background_gradient_blue">
        <item name="android:background">@drawable/background_gradient_blue</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>