<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_setings"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/style_stroke_corners"
        android:text="Первый игрок"
        android:fontFamily="@font/gost_type"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="@dimen/margin_between_elements"
        app:layout_constraintBottom_toTopOf="@id/setengs_game_one_on_one_et_2"/>
    <EditText
        android:id="@+id/setengs_game_one_on_one_et_2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/style_stroke_corners"
        android:text="Второй игрок"
        android:fontFamily="@font/gost_type"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="@dimen/margin_between_elements"
        app:layout_constraintBottom_toTopOf="@id/setengs_game_one_on_one_lnr_lt_1"/>
    <LinearLayout
        android:id="@+id/setengs_game_one_on_one_lnr_lt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/style_bt"
        app:layout_constraintBottom_toTopOf="@id/setengs_game_one_on_one_lnr_lt_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/margin_between_elements"

        >
        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:text="Размер поля"
            android:fontFamily="@font/gost_type"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="30sp"
            >
        </TextView>
        <Spinner
            android:id="@+id/spinner_size_pole"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/style_solid_stroke_corners"
            android:popupBackground="@drawable/style_solid_stroke_corners"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setengs_game_one_on_one_lnr_lt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/style_bt"
        app:layout_constraintBottom_toTopOf="@id/setings_game_one_on_one_frm_lt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/margin_between_elements"
        >
        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:text="Время наход"
            android:fontFamily="@font/gost_type"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="30sp"
            >
        </TextView>
        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/style_solid_stroke_corners"
            android:popupBackground="@drawable/style_solid_stroke_corners"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setings_game_one_on_one_frm_lt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/style_solid_corners"
        android:layout_marginBottom="@dimen/margin_between_elements">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Начальное слово"
            android:fontFamily="@font/gost_type"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gost_type"
            android:textSize="30sp"
            android:text="БАЛАНС"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/style_solid_stroke_corners"
            android:height="50dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <Button
        android:id="@+id/setings_game_one_on_one_bt_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Случайное слово"
        android:fontFamily="@font/gost_type"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="@drawable/style_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setings_game_one_on_one_frm_lt"
        android:layout_marginTop="@dimen/margin_between_elements"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Начать"
        android:fontFamily="@font/gost_type"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/style_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setings_game_one_on_one_bt_1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/margin_between_elements"/>




</androidx.constraintlayout.widget.ConstraintLayout>