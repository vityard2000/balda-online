<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".View.ActivityGameOneOnOne"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <GridView
        android:id="@+id/activity_game_one_on_one__gv_game_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:verticalSpacing="@dimen/sizePaddingGameMap"
        android:horizontalSpacing="@dimen/sizePaddingGameMap"
        android:padding="@dimen/sizePaddingGameMap"
        android:overScrollMode="never"
        android:background="@color/black"

        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
