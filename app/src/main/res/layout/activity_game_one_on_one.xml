<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_setings"
    tools:context=".View.ActivityGameOneOnOne"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/activity_game_one_on_one__lnr_lt_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_solid_corners_blue"
        android:layout_margin="@dimen/margin_between_elements"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/activity_game_one_on_one__tv_first_user_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_elements"
            android:layout_gravity="left"
            android:background="@drawable/style_solid_corners_blue"
            android:backgroundTint="#10404D"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/radius_bt"
            android:paddingRight="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gost_type"
            android:textSize="25sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/activity_game_one_on_one__tv_second_user_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_elements"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/radius_bt"
            android:paddingLeft="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gost_type"
            android:textSize="25sp"
            android:textAllCaps="false"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/activity_game_one_on_one__img_bt_home"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_home"
        android:background="@drawable/styly_bt_top_bar"
        android:layout_marginStart="@dimen/margin_between_elements"
        android:layout_marginBottom="@dimen/margin_between_elements"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_game_one_on_one__frm_lt_top_bar"/>

    <ImageButton
        android:id="@+id/activity_game_one_on_one__img_bt_skip_turn"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_flag"
        android:paddingLeft="5dp"
        android:background="@drawable/styly_bt_top_bar"
        android:layout_marginStart="@dimen/margin_between_elements"
        android:layout_marginBottom="@dimen/margin_between_elements"
        app:layout_constraintLeft_toRightOf="@id/activity_game_one_on_one__img_bt_home"
        app:layout_constraintBottom_toTopOf="@id/activity_game_one_on_one__frm_lt_top_bar"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_between_elements"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_game_one_on_one__frm_lt_top_bar"
        android:src="@drawable/ic_mascot_girl"/>

    <FrameLayout
        android:id="@+id/activity_game_one_on_one__frm_lt_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/elements_dark_blue"
        android:paddingRight="@dimen/height_elements"
        android:paddingLeft="@dimen/height_elements"
        android:layout_marginLeft="@dimen/margin_between_elements"
        android:layout_marginRight="@dimen/margin_between_elements"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/activity_game_one_on_one__gv_game_map">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="10"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gost_type"
            android:textSize="40sp"
            android:textAllCaps="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="1:23"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gost_type"
            android:textSize="40sp"
            android:textAllCaps="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="12"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gost_type"
            android:textSize="40sp"
            android:textAllCaps="false"
            />

    </FrameLayout>

    <GridView
        android:id="@+id/activity_game_one_on_one__gv_game_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:verticalSpacing="@dimen/sizePaddingGameMap"
        android:horizontalSpacing="@dimen/sizePaddingGameMap"
        android:overScrollMode="never"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="@dimen/margin_between_elements"
        android:layout_marginLeft="@dimen/margin_between_elements"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/activity_game_one_on_one__frm_lt_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
