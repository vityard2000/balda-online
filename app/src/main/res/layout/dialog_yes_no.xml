<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/style_solid_corners_blue"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:paddingHorizontal="15dp"
    >
    <TextView
        android:id="@+id/dialog_yes_no__tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/size_text"
        android:fontFamily="@font/gost_type"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_yes_no__bt_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/style_solid_corners_dark_blue"
            android:text="Да"
            android:textSize="@dimen/size_text"
            android:fontFamily="@font/gost_type"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/dialog_yes_no__bt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginLeft="5dp"
            android:background="@drawable/style_bt_google"
            android:text="Нет"
            android:textSize="@dimen/size_text"
            android:fontFamily="@font/gost_type"
            android:textColor="@color/elements_dark_blue"/>

    </LinearLayout>




</LinearLayout>