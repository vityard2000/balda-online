<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/activity_main__tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main__tv_1"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/activity_main__bt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main__bt_1"
        app:layout_constraintTop_toBottomOf="@id/activity_main__tv_1"
        />
    <Button
        android:id="@+id/activity_main__bt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main__bt_2"
        app:layout_constraintTop_toBottomOf="@id/activity_main__bt_1"
        />
    <Button
        android:id="@+id/activity_main__bt_to_activity_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main__bt_to_activity_two"
        app:layout_constraintTop_toBottomOf="@id/activity_main__bt_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>