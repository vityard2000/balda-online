<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/style_solid_corners_blue"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:paddingHorizontal="15dp"
    >
    <TextView
        android:id="@+id/dialog_info__tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/size_text"
        android:fontFamily="@font/gost_type"
        android:textColor="@color/white"/>

        <Button
            android:id="@+id/dialog_info__bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/style_corners_25"
            android:backgroundTint="@color/white"
            android:text="Ok"
            android:textSize="@dimen/size_text"
            android:fontFamily="@font/gost_type"
            android:textColor="@color/elements_dark_blue"/>
</LinearLayout>