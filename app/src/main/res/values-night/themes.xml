<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BaldaOnline" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/gost_type</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text</item>
    </style>
    <style name="background_gradient_green">
        <item name="android:background">@drawable/background_gradient_green_night</item>
    </style>
    <style name="background_gradient_blue">
        <item name="android:background">@drawable/background_gradient_blue</item>
    </style>
</resources>